<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".HomeActivity">

    <ImageButton
        android:id="@+id/submitSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/large"
        android:layout_marginVertical="@dimen/xxlarge"
        android:backgroundTint="@color/backgroundColor"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/xlarge"
        android:layout_marginStart="@dimen/small"
        android:ems="16"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:hint="@string/movie_search"
        android:inputType="text"
        android:textSize="@dimen/small_sp"
        app:layout_constraintBottom_toBottomOf="@+id/submitSearch"
        app:layout_constraintStart_toEndOf="@+id/submitSearch"
        app:layout_constraintTop_toTopOf="@+id/submitSearch" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLytOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xlarge"
        app:tabTextColor="@color/movieTitleColor"
        android:background="@color/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchMovie" />

    <!-- probably add recycler view of movie genres here and set top of viewpager to bottom of this rv -->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLytOptions"
        app:layout_constraintBottom_toBottomOf="parent"/>


