<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/medium"
    android:paddingEnd="@dimen/xsmall">

    <com.google.android.material.chip.Chip
        android:id="@+id/itemGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkable="false"
        android:fontFamily="@font/lato_regular"
        android:text="@string/movie_genre"
        android:textColor="@color/movieTitleColor"
        android:textSize="@dimen/small_sp"
        app:chipBackgroundColor="@color/backgroundColor"
        app:chipStrokeColor="@color/chip_background_color"
        app:chipStrokeWidth="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>